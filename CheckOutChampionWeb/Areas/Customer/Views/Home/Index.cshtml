@model IEnumerable<Product>
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card override-card  border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title pt-3 h5 text-light opacity-75 text-uppercase text-center">@product.ProductName</p>
                        </div>
                        <div class="pl-1">
                            <p class="text-light opacity-75 text-center">List Price: @product.Price.ToString("c")</p>
                        </div>
                        @if (User.IsInRole(StaticData.Role_Admin))
                        {
                            <div class="pt-4">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-6 pt-4">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                        Details
                                    </a>
                                </div>
                                <div class="col-6 pt-4">
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <input type="hidden" name="isIncrement" value="true" >
                                        <button type="submit" class="btn btn-primary bg-gradient border-0 form-control">
                                            Add to Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }          
                    </div>
                </div>
            </div>
        </div>
    }
</div>