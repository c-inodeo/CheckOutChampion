@model IEnumerable<Product>
<form class="d-flex" asp-controller="Home" asp-action="Index" method="get">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search for products or category..." aria-label="Search for products..." aria-describedby="button-addon2" value="@ViewData["CurrentFilter"]">
        <button class="btn btn-warning" type="submit" id="button-addon2">Search</button>
    </div>
</form>